Also did some patter quesiton such as

1. * * *
   * * *
   * * *

#include <iostream>
using namespace std;

void printPattern(int N)
{
  for(int i = 0; i<N; i++){
    for(int j = 0; j<N; j++){
      cout << "*";
    }
    cout << endl;  
  }
}

int main() {
    int N = 5;

  printPattern(N);

  return  0;
}


