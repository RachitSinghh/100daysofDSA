   * * 
   * * *
   * * * *



#include <iostream>
using namespace std;

void printPattern(int N)
{
  for(int i = 0; i<N; i++){
    for(int j = 0; j<i; j++){
      cout << "*";
    }
    cout << endl;  
  }
}

int main() {
    int N = 5;

  printPattern(N);

  return  0;
}
